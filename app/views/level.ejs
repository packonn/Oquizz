<%- include('partials/header') %>


<% if (locals.level) { %>
    <div class="text-center">
        <h2 class="h1 my-4">Page du niveau : <%= level.name %></h2>
    </div>

    <div class="row mb-3 text-center flew-wrap">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>name</th>
                    <th>Danger Zone</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= level.id %></td>
                    <td><%= level.name %></td>
                    <td>
                        <form action="/levels/<%= level.id %>/delete" method="POST">
                            <button
                                type="submit"
                                class="btn btn-danger js-delete-level">Effacer
                            </button>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>

        <form action="/levels/<%= level.id %>/edit" method="POST">
            <input type="text" value="<%= level.name %>" name="name">
            <button type="submit">Envoyer</button>
        </form>
    </div>
<% } else { %>
    <p>Pas de ressource correspondantes Ã  la recherche</p>
<% } %>
<%- include('partials/footer') %>