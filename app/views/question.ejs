<%- include('partials/header') %>


<% if (locals.question) { %>
    <div class="text-center">
        <h2 class="h1 my-4">Page du niveau : <%= question.name %></h2>
    </div>

    <div class="row mb-3 text-center flew-wrap">
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Question</th>
                    <th>Level</th>
                    <th>Danger Zone</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= question.id %></td>
                    <td><%= question.description %></td>
                    <td><%= level.name %></td>
                    <td><a href="/questions/<%= question.id %>/delete" type="button" class="btn btn-danger js-delete-question">Effacer</a></td>
                </tr>
            </tbody>
        </table>

        <form action="/questions/<%= question.id %>/edit" method="POST">
            <input type="text" value="<%= question.description %>" name="description">
            <button type="submit">Envoyer</button>
        </form>

    </div>
<% } else { %>
