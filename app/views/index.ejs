<%- include('partials/header') %>

    <!-- Welcome -->
    <div class="text-center">
        <% if (locals.tag) { %>
            <h2 class="h1 my-4">Quiz sur le sujet : <%= tag.name %></h2>
        <% } else { %>
            <h2 class="h1 my-4">Bienvenue sur O'Quiz</h2>
            <p class="lead">Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum. Stet clita kasd gubergren, no sea takimata sanctus est Lorem ipsum dolor sit amet. Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore magna aliquyam erat, sed diam voluptua. At vero eos et accusam et justo duo dolores et ea rebum.</p>
        <% } %>
    </div>

    <!-- Cards -->
    <div class="row mb-3 text-center flew-wrap">

        <!-- One card -->


        <!-- le ? est optional chaining operator -->


        <%# if(locals.quizzes && locals.quizzes.length > 0) { %>

        <% if(locals.quizzes?.length) { %>
            <% for( let i = 0; i < quizzes.length; i++ ) { %>

                <div class="col-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h3 class="h2"><%= quizzes[i].title %></h3>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h4 class="h3"><%= quizzes[i].description %></h4>
                            <p><%= quizzes[i].author.fullname %></p>
                            <ul class="list-unstyled mb-4 p-0">


                               <% quizzes[i].tags.forEach((tag, index) => { %>

                                    <li class="badge bg-primary">
                                        <a href="/tags/<%= tag.id %>/quizzes" class="text-white">
                                            <%= tag.name %>
                                        </a>
                                    </li>

                                <% }) %>
                            </ul>
                            <a href="/quiz/<%= quizzes[i].id %>" class="btn btn-lg btn-primary text-white">Jouer</a>
                        </div>
                    </div>
                </div>
            <% } %>



        <% } else { %>
            <p>Les quizzes ont disparus</p>
        <% } %>
    </div>

<%- include('partials/footer') %>